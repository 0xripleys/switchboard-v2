{
  "packages": [
    "tools/eslint",
    "libraries/sbv2-lite",
    "libraries/ts",
    "libraries/sbv2-utils",
    "cli",
    "packages/*",
    "programs/*",
    "website"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "publish": {
    "registry": "https://npm.pkg.github.com",
    "ignoreChanges": [
      "./website/**/*",
      "./programs/**/*",
      "./packages/**/*",
      "./libraries/rs",
      "./directory/**",
      "./tools/**",
      "./**/README.md"
    ]
  }
}
