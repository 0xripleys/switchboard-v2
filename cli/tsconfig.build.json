{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "target": "es2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@solana/spl-token": [
        "../node_modules/@solana/spl-token",
        "./node_modules/@solana/spl-token"
      ]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*"]
}
